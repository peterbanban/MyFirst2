<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.mytest2.ActivityClass.QueryActivity">

    <com.example.administrator.mytest2.GeneralClass.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.example.administrator.mytest2.GeneralClass.TitleLayout>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addQuery"
            android:text="创建"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add"
            android:text="添加"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_del"
            android:text="删除"
            android:layout_centerInParent="true"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_update"
            android:text="修改"
            android:layout_below="@id/btn_del"
            android:layout_alignLeft="@id/btn_del"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_select"
            android:text="查询"
            android:layout_alignLeft="@id/btn_del"
            android:layout_below="@id/btn_update"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_addQuery1"
            android:text="创建"
            android:layout_toRightOf="@id/btn_addQuery"
            android:layout_marginTop="120dp"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_add1"
            android:text="添加"
            android:layout_toRightOf="@id/btn_addQuery"
            android:layout_marginTop="170dp"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_del1"
            android:text="删除"
            android:layout_toRightOf="@id/btn_addQuery"
            android:layout_marginTop="231dp"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_update1"
            android:text="修改"
            android:layout_below="@id/btn_del1"
            android:layout_toRightOf="@id/btn_addQuery"
    />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_select1"
            android:text="查询"
            android:layout_toRightOf="@id/btn_addQuery"
            android:layout_below="@id/btn_update1"
    />
    <EditText android:layout_width="200dp"
              android:id="@+id/edit_input"
              android:layout_height="wrap_content"
              android:layout_marginTop="80dp"
              android:background="#000"
              android:textColor="#fff"
              android:layout_centerHorizontal="true"
    />
</RelativeLayout>
